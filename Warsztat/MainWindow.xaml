<Window x:Class="Warsztat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warsztat-Git Name" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
            <Menu Grid.Row="0"  HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="507">
                <MenuItem Header="Opcje">
                    <MenuItem Header="Dodaj Klienta"></MenuItem>
                </MenuItem>
            </Menu>
        <StackPanel Grid.Row="1" >
            
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label HorizontalAlignment="Left" Margin="5 5 15 5">Login:</Label>
                <TextBox HorizontalAlignment="Center" Margin="5 5 15 5" Width="150">Wpisz Login</TextBox>
            </WrapPanel>
            
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label HorizontalAlignment="Left" Margin="5 5 15 5">Haslo:</Label>
                <TextBox HorizontalAlignment="Center" Margin="5 5 15 5" Width="150">Wpisz Haslo</TextBox>
            </WrapPanel>
            
        </StackPanel>

    </Grid>
   
</Window>
